{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@mentra/display-utils": ["../display-utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/test/**"],
  "references": [{"path": "../types"}, {"path": "../display-utils"}]
}
