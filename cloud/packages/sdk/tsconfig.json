{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {},
    "lib": ["ES2020"],
    "types": ["node", "ws"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
